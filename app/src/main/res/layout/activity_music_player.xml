<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_music_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context="com.zzh.music.activity.MusicPlayerActivity">
    <include layout="@layout/toolbars" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_music_slide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorGlobe">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_last_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一曲"/>
            <Button
                android:id="@+id/btn_player_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"/>
            <Button
                android:id="@+id/btn_next_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一曲"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
